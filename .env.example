# Web3 Interactive Demo - Environment Variables
# Copy this file to .env and fill in your actual API keys

# ========================================
# TWITTER/X API CONFIGURATION
# ========================================
# Get from: https://developer.twitter.com/en/portal/dashboard
# 1. Create Twitter Developer Account
# 2. Create new App
# 3. Generate Bearer Token (requires Elevated access)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# ========================================
# INSTAGRAM API CONFIGURATION
# ========================================
# Get from: https://developers.facebook.com/apps/
# 1. Create Facebook App
# 2. Add Instagram Basic Display product
# 3. Generate User Access Token
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here

# ========================================
# YOUTUBE API CONFIGURATION
# ========================================
# Get from: https://console.cloud.google.com/
# 1. Create/Select Google Cloud Project
# 2. Enable YouTube Data API v3
# 3. Create API Key credentials
YOUTUBE_API_KEY=your_youtube_api_key_here

# ========================================
# DATABASE CONFIGURATION
# ========================================
# Choose one of the following options:

# Option 1: MongoDB (recommended for user data)
MONGODB_URI=mongodb://localhost:27017/web3demo
# Or MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/web3demo

# Option 2: Firebase (good for beginners)
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# ========================================
# FILE STORAGE CONFIGURATION
# ========================================
# For video uploads, choose one:

# Option 1: AWS S3
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your-bucket-name
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Option 2: Cloudinary (easier setup)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ========================================
# APPLICATION CONFIGURATION
# ========================================
# Development or production mode
NODE_ENV=development

# Your application URL (for callbacks)
APP_URL=http://localhost:3000

# Enable/disable features
ENABLE_REAL_TIME_UPDATES=true
ENABLE_VIDEO_UPLOADS=true
ENABLE_LAYOUT_SAVING=true

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# SECURITY CONFIGURATION
# ========================================
# Session secret (generate a random string)
SESSION_SECRET=your_random_session_secret_here

# JWT secret for authentication
JWT_SECRET=your_jwt_secret_here

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ========================================
# OPTIONAL: ANALYTICS & MONITORING
# ========================================
# Google Analytics
GA_TRACKING_ID=GA-XXXXXXXXX

# Sentry for error tracking
SENTRY_DSN=your_sentry_dsn_here

# ========================================
# OPTIONAL: EMAIL SERVICE
# ========================================
# For notifications, password resets, etc.
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# ========================================
# BLOCKCHAIN CONFIGURATION
# ========================================
# Default recipient address for tips (your wallet)
DEFAULT_TIP_RECIPIENT=0x742d35Cc6635C0532925a3b8D9c79E8aB382d76B

# Supported networks (comma-separated chain IDs)
SUPPORTED_NETWORKS=1,5,137,80001

# RPC URLs for different networks
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-infura-key
POLYGON_RPC_URL=https://polygon-rpc.com/